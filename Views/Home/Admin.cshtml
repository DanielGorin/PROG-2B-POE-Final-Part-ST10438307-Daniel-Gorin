@{

}
<div class="text-center">
    <h1 class="display-4">Admin Claims Management</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claimant Name</th>
                <th>Date Logged</th>
                <th>Total Owed</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.ClaimantName</td>
                    <td>@claim.DateLogged.ToShortDateString()</td>
                    <td>R@(claim.HourlyRate * claim.HoursWorked)</td>
                    <td>@claim.Status</td>
                    <td>
                        <button class="btn btn-primary" onclick="location.href='/Home/ViewClaim?claimId=@claim.ClaimId'">View</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
