@model IEnumerable<dynamic>

<div class="text-center">
    <h1 class="display-4">Claimant Management</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Earliest Claim</th>
                <th>Total Earned (R)</th>
                <th>Total Pending (R)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.FullName</td>
                    <td>@record.EarliestClaim.ToShortDateString()</td>
                    <td>R@(record.TotalEarned.ToString("F2"))</td>
                    <td>R@(record.TotalPending.ToString("F2"))</td>
                    <td>
                        <button class="btn btn-primary" onclick="location.href='/Home/ViewClaimant?claimantName=@record.FullName'">View Claimant</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>