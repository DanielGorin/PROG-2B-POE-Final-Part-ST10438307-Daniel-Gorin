@model IEnumerable<dynamic>

<div class="text-center">
    <h1 class="display-4">HR Management</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Earliest Claim</th>
                <th>Total Earned (R)</th>
                <th>Total Pending (R)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.FullName</td>
                    <td>@record.EarliestClaim.ToShortDateString()</td>
                    <td>R@record.TotalEarned</td>
                    <td>R@record.TotalPending</td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-primary mt-3" onclick="location.href='/Home/Admin'">Back to Admin Page</button>
</div>