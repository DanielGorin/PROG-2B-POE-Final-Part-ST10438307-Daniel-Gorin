@{
    ViewData["Title"] = "Lecturer Sign-In";
}

<div class="text-center">
    <h1 class="display-4">Lecturer Sign-In</h1>
    <form method="post" action="/Home/LecturerSignIn">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" id="FirstName" name="firstName" class="form-control" pattern="[A-Za-z\s\-]+" title="Only letters, hyphens, and spaces are allowed" required>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" id="LastName" name="lastName" class="form-control" pattern="[A-Za-z\s\-]+" title="Only letters, hyphens, and spaces are allowed" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">LogIn</button>
    </form>
</div>